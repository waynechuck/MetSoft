        <thead>
        <tr>
            <th>ID-Nummer</th>
            <th>Artikel</th>
            <th>Autor</th>
            <th>Datum der Ver√∂ffentlichung</th>
        </tr>
        </thead>
        <tbody>
        {% for news in news %}
