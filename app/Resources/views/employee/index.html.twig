{% extends 'dashboard.html.twig' %}

{% block body %}

    <div class="panel-heading">
        <h3 class="panel-title"><center>Übersicht der aktuelle ToDo´s</center></h3>
    </div>

    <div class="jumbotron">
        {#@TODO keine hartgecodeten URLS verwenden#}
        <a href="/dashboard/mitarbeiter/erstellen" class="btn btn-primary">Mitarbeiterprofil anlegen</a>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Personalnummer</th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Telefon</th>
                <th>Position</th>
                <th>Bearbeitungsmöglichkeiten</th>
            </tr>
            </thead>
            <tbody>
            {% for employee in employee %}
                <tr>
                    <th scope="row"> {{ employee.id }} </th>
                    <td> {{ employee.vorname }} </td>
                    <td> {{ employee.nachname}} </td>
                    <td> {{ employee.telefon }} </td>
                    <td> {{ employee.position}} </td>
                    <td>
                        <a href="/dashboard/mitarbeiter/details/{{ employee.id }}" class="btn btn-success">
                            Details
                        </a>
                        <a href="/dashboard/mitarbeiter/bearbeiten/{{ employee.id }}" class="btn btn-info">
                            Bearbeiten
                        </a>
                        <a href="/dashboard/mitarbeiter/löschen/{{ employee.id }}" class="btn btn-danger">
                            Löschen
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
