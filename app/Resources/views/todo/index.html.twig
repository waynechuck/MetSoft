{% extends 'dashboard.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="panel-heading">
        <h3 class="panel-title"><center>Übersicht der aktuelle ToDo´s</center></h3>
    </div>
    <div class="jumbotron">
        {#@TODO keine hartgecodeten URLS verwenden#}
        <a class="btn btn-primary" href="{{ path('todo_create') }}">Todo´s hinzufügen</a>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID-Nummer</th>
                <th>Name des ToDo`s</th>
                <th>Deadline</th>
                <th>Bearbeitungsmöglichkeiten</th>
            </tr>
            </thead>
            <tbody>
            {% for todo in todos %}
                <tr>
                    <th scope="row">{{ todo.id }}</th>
                    <td>{{ todo.name }}</td>
                    <td>{{ todo.dueDate|date('F j, Y, g:i a')}}</td>
                    <td>
                        {#@TODO keine hartgecodeten URLS verwenden#}
                        <a href="{{ path('todo_details', { 'id' : todo.id }) }}" class="btn btn-success">Details</a>
                        {#@TODO keine hartgecodeten URLS verwenden#}
                        <a href="{{ path('todo_edit', { 'id' : todo.id }) }}" class="btn btn-info">Bearbeiten</a>
                        {#@TODO keine hartgecodeten URLS verwenden#}
                        <a href="{{ path('todo_delete', { 'id' : todo.id }) }}" class="btn btn-danger">Löschen</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
