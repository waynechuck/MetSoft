{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

 <h2 class="page-header">Aktuelle Todos</h2>
   <table class="table table-striped">
   <thead>
    <tr>
        <th>#</th>
        <th>Name des ToDo`s</th>
        <th>Datum</th>
        <th></th>
    </tr>
   </thead>
   <tbody>
   {% for todo in todos %}
   <tr>
    <th scope="row">{{ todo.id }}</th>
    <td>{{ todo.name }}</td>
    <td>{{ todo.dueDate|date('F j, Y, g:i') }}</td>
    <td>
         <a href="/todos/details/{{ todo.id }}" class="btn btn-success">
            View
         </a>
        <a href="/todos/edit/{{ todo.id }}" class="btn btn-default">
            EDIT
        </a>
        <a href="todos/delete/{{ todo.id }}" class="btn btn-danger">
            Delete
        </a>
    </td>
   </tr>
   {% endfor %}
   </tbody>
  </table>

{% endblock %}
