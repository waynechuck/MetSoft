{% extends 'base.html.twig' %}

{% block body %}

 <h2 class="page-header">Aktuelle Todos</h2>
   <table class="table table-striped">
   <thead>
    <tr>
        <th>ID-Nummer</th>
        <th>Name des ToDo`s</th>
        <th>Deadline</th>
        <th>Bearbeitungsmöglichkeiten</th>
    </tr>
   </thead>
   <tbody>
   {% for todo in todos %}
   <tr>
    <th scope="row">{{ todo.id }}</th>
    <td>{{ todo.name }}</td>
    <td>{{ todo.dueDate|date('F j, Y, g:i a')}}</td>
    <td>
         <a href="/todos/details/{{ todo.id }}" class="btn btn-success">
            Details
         </a>
        <a href="/todos/edit/{{ todo.id }}" class="btn btn-default">
            Bearbeiten
        </a>
        <a href="todos/delete/{{ todo.id }}" class="btn btn-danger">
            Löschen
        </a>
    </td>
   </tr>
   {% endfor %}

   <a class="btn btn-default" href="/todos/create">Todo´s hinzufügen</a>
   </tbody>
  </table>

{% endblock %}
