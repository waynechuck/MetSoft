{% extends 'dashboard.html.twig' %}

{% block body %}

        <div class="panel-heading">
            <h3 class="panel-title"><center>Mitarbeiterübersicht der MetSoft UG</center></h3>
        </div>
        <div class="panel-body">
            <a href="/dashboard/mitarbeiter/erstellen" class="btn btn-primary">Mitarbeiterprofil anlegen</a>
        </div>

        <div class="jumbotron">

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Personalnummer</th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Telefon</th>
                <th>Position</th>
                <th>Bearbeitungsmöglichkeiten</th>
            </tr>
            </thead>
            <tbody>
            {% for mitarbeiter in mitarbeiter %}
                <tr>
                    <th scope="row"> {{ mitarbeiter.id }} </th>
                    <td> {{ mitarbeiter.vorname }} </td>
                    <td> {{ mitarbeiter.nachname}} </td>
                    <td> {{ mitarbeiter.telefon }} </td>
                    <td> {{ mitarbeiter.position}} </td>
                    <td>
                        <a href="/dashboard/mitarbeiter/details/{{ mitarbeiter.id }}" class="btn btn-success">
                            Details
                        </a>
                        <a href="/dashboard/mitarbeiter/bearbeiten/{{ mitarbeiter.id }}" class="btn btn-info">
                            Bearbeiten
                        </a>
                        <a href="/dashboard/mitarbeiter/löschen/{{ mitarbeiter.id }}" class="btn btn-danger">
                            Löschen
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
